package _16_16_逆序对;

public class 逆序对 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int[] nums = {1,3,5,7,9};
		subSort(nums);

		System.out.print("\n");		
	}
	
	public static int[] subSort(int nums[]) {
		
		if (nums.length == 0) return new int[]{-1, -1};
		
		int begin = -1;
		int end = - 1;
		int min = nums[end];
		int max = nums[0];
		
		for (int i = 0; i < nums.length; i++) {
			if (nums[i] >= max) {	
				max = nums[i];
			} else {
				begin = i;
			}
		}
		
		if( begin == 0 ) return new int[]{-1, -1};

		for (int i = nums.length - 1; i >=0; i--) {
			if (nums[i] <= min) {
				min = nums[i];
			} else {
				end = i;
			}
		}
		
		return new int[]{end, begin};
	}

}
